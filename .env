# --- Trading Params ---
# Set symbol for XAUUSD (Gold) - MT5 style
SYMBOL=XAUUSD
TIMEFRAME=H4          # ตัวเลือก: M1,M5,M15,M30,H1,H4,D1
LOT=0.05              # เริ่มต้นด้วย lot ขนาดเล็กก่อน
SL_PIPS=70            # Stop Loss เป็นจำนวน pips (เหมาะกับ H4)
TP_PIPS=210           # Take Profit เป็นจำนวน pips (Risk:Reward = 1:3)
MAGIC=234000          # รหัสประจำตัว Bot (ใช้แยกออเดอร์จาก EA อื่นหรือการเทรดด้วยมือ)
MAX_SLIPPAGE=10       # การเลื่อนราคาสูงสุดที่ยอมรับได้ (point)

# --- Instrument sizing (for XAUUSD) ---
# point/point_size and USD value-per-point-per-1-lot
# For XAUUSD in this backtest we use: 1 point = 0.01 and value_per_point_per_lot ~= $1
POINT_SIZE=0.01
VALUE_PER_PIP_PER_LOT=1.0
INSTRUMENT_TYPE=XAU

# --- Risk Control (รายวัน) ---
DAILY_PROFIT_TARGET=2.0    # เป้ากำไรรายวัน เป็น % ของ balance (ถึงแล้วหยุดเทรด)
DAILY_DRAWDOWN_LIMIT=2.0   # ขาดทุนสูงสุดรายวัน เป็น % ของ balance (เกินแล้วหยุดเทรด)
MAX_OPEN_TRADES=2          # จำนวนออเดอร์เปิดพร้อมกันสูงสุด (ลดความเสี่ยง)

# Risk Management  
RISK_PERCENT=1.5      # ความเสี่ยงต่อเทรด (1.5% ของ Account Balance)
MAX_POSITIONS=3       # จำนวนออเดอร์เปิดสูงสุด (Golden Trend: 3)
MAX_CONSECUTIVE_LOSSES=3  # หยุดเทรดหลังขาดทุน 3 ครั้งติด

# --- Backtest (ทดสอบย้อนหลัง) ---
BACKTEST_DAYS=365     # จำนวนวันที่จะทดสอบ Strategy (มากกว่า = แม่นยำกว่า)

